{
  "editor.copyWithSyntaxHighlighting": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontSize": 15,
  "editor.formatOnSave": true,
  // Detected links get underlined which is quite distracting
  "editor.links": false,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    // This enables autocomplete similar to default Sublime Text behaviour
    "strings": true
  },
  "editor.rulers": [90],
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "*.conf.j2": "properties",
    ".env*": "properties",
    "*.json.j2": "json",
    "*.properties.j2": "properties",
    "*.service": "properties",
    "*.service.j2": "properties",
    "*.sh.j2": "shellscript",
    "*.xml.j2": "xml",
    "*.yaml.j2": "yaml",
    "*.yml.j2": "yaml"
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "c": false,
    "shellscript": true,
    "properties": false
  },
  // Disable annoying "Ctrl+I to continue with Copilot" prompt in files
  "inlineChat.lineNaturalLanguageHint": false,
  "js/ts.implicitProjectConfig.checkJs": true,
  // Make it so that the Lua extension only diagnoses the currently open file instead of the entire workspace
  "Lua.workspace.maxPreload": 0,
  "prettier.requireConfig": true,
  "redhat.telemetry.enabled": true,
  // Default terminal history (1000) not enough, e.g. for Ansible
  "terminal.integrated.scrollback": 2000,
  // Disable terminal tab completions; too different from normal shell behaviour
  "terminal.integrated.suggest.enabled": false,
  "trailing-spaces.deleteModifiedLinesOnly": true,
  "trailing-spaces.highlightCurrentLine": false,
  "trailing-spaces.trimOnSave": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  // Without this setting, if vscode isn't open and it's used to open a specific file or
  // directory (e.g. `code .`), it will open a new window and lose the previously opened
  // windows and their state (including unsaved files). This setting will always restore
  // previously opened windows.
  "window.restoreWindows": "preserve",
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "Solarized Dark High Contrast",
  // This will disable the icons in the file explorer sidebar
  "workbench.iconTheme": null,
  "xml.format.maxLineWidth": 0,
  // The Feedback icon now needs to be disabled manually by clicking on the bottom bar and unchecking Feedback :/
  // "workbench.statusBar.feedback.visible": false,
  "[css]": {
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  }
}
