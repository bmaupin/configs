{
    "editor.fontSize": 15,
    // Detected links get underlined which is quite distracting
    "editor.links": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        // This enables autocomplete similar to default Sublime Text behaviour
        "strings": true
    },
    "editor.rulers": [
        120
    ],
    "files.associations": {
        "*.conf.j2": "properties",
        "*.json.j2": "json",
        "*.properties.j2": "properties",
        "*.service": "properties",
        "*.service.j2": "properties",
        "*.sh.j2": "shellscript",
        "*.xml.j2": "xml"
    },
    "trailing-spaces.deleteModifiedLinesOnly": true,
    "trailing-spaces.highlightCurrentLine": false,
    "trailing-spaces.trimOnSave": true,
    "window.titleBarStyle": "custom",
    "workbench.colorTheme": "Solarized Dark High Contrast",
    // This will disable the icons in the file explorer sidebar
    "workbench.iconTheme": null,
    "workbench.statusBar.feedback.visible": false,
    "[html]": {
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2
    },
    "[jsonc]": {
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 2
    }
}